---
import NavBar from "@components/NavBar.astro";
import About from "@components/sections/About.astro";
import Home from "@components/sections/Home.astro";
import Photo from "@components/sections/Photo.astro";
import Services from "@components/sections/Services.astro";
import Contact from "@components/sections/Contact/Contact.astro";
import Footer from "@components/Footer.astro";
import FloatingIcon from "@components/FloatingIcon.astro";
import "../styles.css";
import SchedulePopup from "@components/SchedulePopup.astro";
---

<html class="scroll-smooth" lang="ro">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/webp" href="/logo.webp" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Inchiriez-Autocar.ro</title>

    <meta name="robots" content="index, follow" /><link
      rel="manifest"
      href="/manifest.json"
    />
    <meta
      name="description"
      content="Servicii de transport persoane in Bucuresti, Ilfov."
    />
    <meta property="og:locale" content="ro_RO" />
    <meta property="og:type" content="website" /><meta
      property="og:site_name"
      content="inchiriez-autocar.ro"
    />
    <meta property="og:title" content="Inchiriez-Autocar.ro" />
    <meta property="og:image" content="/logo.webp" />
    <meta property="og:image:width" content="581" />
    <meta property="og:image:height" content="580" />
    <meta
      property="og:description"
      content="Servicii de transport persoane in Bucuresti, Ilfov."
    />
    <meta name="msapplication-TileImage" content="/logo.webp" />
  </head>

  <body>
    <NavBar />
    <Home />
    <Services />
    <Photo />
    <About />
    <Contact />
    <Footer />
    <FloatingIcon />
    <SchedulePopup />
  </body>
</html>
