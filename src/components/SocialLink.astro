---
interface Props {
  to: string;
  label: string;
  isActive?: boolean;
}

const { to, label, isActive = false } = Astro.props;
---

<a
  href={to}
  class:list={[
    "flex items-center justify-between px-4 py-2 rounded-full shadow md:max-w-sm",
    isActive ? "bg-green-600 text-white" : "bg-gray-100",
  ]}
>
  <span class="font-bold">{label}</span>
  <slot name="end" />
</a>
